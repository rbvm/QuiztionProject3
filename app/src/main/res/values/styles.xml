<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2E7D32</item>
        <item name="colorPrimaryDark">#1B5E20</item>
        <item name="colorAccent">#76FF03</item>
        <item name="colorButtonNormal">#CDDC39</item>
    </style>

    <style name="QuestionStyle">
        <!-- Question text style -->
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/roboto_italic</item>
    </style>

    <style name="AnswerStyle">
        <!-- Answer text style -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:fontFamily">@font/roboto_italic</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>